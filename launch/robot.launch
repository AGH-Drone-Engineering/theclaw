<launch>
    <param name="robot_description" command="xacro --inorder '$(find theclaw)/urdf/theclaw.urdf.xacro'"/>

    <rosparam file="$(find theclaw)/config/theclaw_control.yaml" command="load"/>

    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" ns="/theclaw" args="wheel1_controller wheel2_controller wheel3_controller joint_state_controller"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
        <remap from="/joint_states" to="/theclaw/joint_states" />
    </node>

    <node ns="motor_a" pkg="omniwheel" type="omniwheel_node" name="controller" respawn="true">
        <remap from="cmd_vel" to="/cmd_vel"/>
        <remap from="motor" to="/theclaw/wheel1_controller/command"/>
        <param name="wheel_id" type="int" value="1"/>
    </node>

    <node ns="motor_b" pkg="omniwheel" type="omniwheel_node" name="controller" respawn="true">
        <remap from="cmd_vel" to="/cmd_vel"/>
        <remap from="motor" to="/theclaw/wheel2_controller/command"/>
        <param name="wheel_id" type="int" value="2"/>
    </node>

    <node ns="motor_c" pkg="omniwheel" type="omniwheel_node" name="controller" respawn="true">
        <remap from="cmd_vel" to="/cmd_vel"/>
        <remap from="motor" to="/theclaw/wheel3_controller/command"/>
        <param name="wheel_id" type="int" value="3"/>
    </node>
</launch>
